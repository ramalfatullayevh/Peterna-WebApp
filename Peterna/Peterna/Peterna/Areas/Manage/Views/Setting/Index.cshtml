
@{
    ViewData["Title"] = "Index";
}

@model PaginationVM<Setting>
<div class="col-lg-9 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Key
                            </th>
                           <th>
                                Value
                            </th>
                            <th>
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items )
                        {
                            <tr>
                                <td>
                                    @item.Key
                                </td>
                                <td>
                                    @item.Value
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-area="Manage" asp-controller="Setting" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <nav aria-label="...">
                    <ul class="pagination pagination-lg">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                            </li>

                        }
                        @for (int i = 1; i <= Model.MaxPageCount; i++)
                        {
                            <li class="page-item  @(Model.CurrentPage==i?" disabled":"")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                            </li>
                        }
                        @if (Model.CurrentPage < Model.MaxPageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)" tabindex="-1">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
